package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        System.out.println("----------------------------------");
        System.out.println("\nTEMPERATURANALYSATORN v0.34");
        Scanner scan = new Scanner(System.in);

        System.out.print("\nHur många temperaturvärden vill du mata in?: ");
        int antal = scan.nextInt();
        int[] värden = new int[antal];

        for(int i = 0; i < värden.length; i++) {

            boolean invalidInput = true;
            while(invalidInput) {
                System.out.println("\nAnge temperaturvärde " + (i + 1) + ": ");
                int temp = scan.nextInt();

                if(temp > -273 && temp < 100) {
                    värden[i] = temp;
                    invalidInput = false;
                }
            }

        }

        boolean avsluta = false;
        while(!avsluta ) {
            System.out.println("\nFör att fortsätta, välj ett av alternativen nedan:");
            System.out.println("1. Visa största temperaturen ");
            System.out.println("2. Visa minsta temperaturen ");
            System.out.println("3. Visa medeltemperaturen ");
            System.out.println("4. Visa medianvärde ");
            System.out.println("5. Visa standardavvikelse ");
            System.out.println("6. Avsluta programmet ");
            int val = scan.nextInt();

            if(val == 1) {

                System.out.println("\nMaxtemperaturen är: " + Statistics.Max(värden)); {
                }

            }
            else if (val == 2) {

                System.out.println("\nMinimitemperaturen är: " + Statistics.Min(värden));
            }
            else if (val == 3) {

                System.out.println("\nMedeltemperaturen är: " + Statistics.Average(värden));
            }
            else if (val == 4) {

                System.out.println("\nMediantemperaturen är: " + Statistics.Median(värden));

            }
            else if (val == 5) {

                System.out.println("\nStandardavvikelsen är: " + Statistics.Stdev(värden));

            }
            else if (val == 6) {
                System.out.println("\nHa en bra dag!");
                System.out.println("Avslutar programmet...");
                avsluta = true;
            }
            else
                System.out.println("Välj ett giltigt menyval");





        }
    }
}



